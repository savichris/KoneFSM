<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ImageButton
        android:id="@+id/nextBtn"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="fitCenter"
        android:text="Next"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/equip_c_arrow_right"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="34dp"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_marginTop="8dp"
        android:text="@string/technician_a6_title"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/bgImg"
        android:layout_width="531dp"
        android:layout_height="470dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/building_segment_residential"/>

    <TextView
        android:id="@+id/technician_a6_btn1"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:background="@color/com_facebook_button_border_color_focused"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:text="@string/technician_a6_btn1_txt"
        android:textAlignment="center"
        android:textColor="?android:attr/colorPrimaryDark"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="128dp"/>

    <TextView
        android:id="@+id/technician_a6_btn3"
        android:layout_width="218dp"
        android:layout_height="64dp"
        android:layout_marginStart="32dp"
        android:background="@color/com_facebook_button_border_color_focused"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:text="@string/technician_a6_btn3_txt"
        android:textAlignment="center"
        android:textColor="?android:attr/colorPrimaryDark"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/technician_a6_btn2"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/technician_a6_btn2"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:background="@color/com_facebook_button_border_color_focused"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:text="@string/technician_a6_btn2_txt"
        android:textAlignment="center"
        android:textColor="?android:attr/colorPrimaryDark"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/technician_a6_btn1"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="32dp"/>

    <ImageView
        android:id="@+id/technicianImg"
        android:layout_width="105dp"
        android:layout_height="211dp"
        android:layout_marginBottom="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:transitionName="technicianCharacter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/character_blue_man_technician"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/bgImg"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/technician_a6_btn3"
        app:layout_constraintHorizontal_bias="0.576"
        app:layout_constraintVertical_bias="1.0"/>

    <FrameLayout
        android:id="@+id/popin_container"
        android:layout_width="448dp"
        android:layout_height="191dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="64dp"
        app:layout_constraintLeft_toRightOf="@+id/technician_a6_btn2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        >

        <TextView
            android:id="@+id/results"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:padding="6dp"
            android:textColor="@android:color/white"/>
    </FrameLayout>

</android.support.constraint.ConstraintLayout>