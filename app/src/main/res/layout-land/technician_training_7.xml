<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ImageButton
        android:id="@+id/nextBtn"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="fitCenter"
        android:text="Next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/equip_c_arrow_right"/>

    <ImageView
        android:id="@+id/technicianImg"
        android:layout_width="154dp"
        android:layout_height="197dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:transitionName="technicianCharacter"
        app:srcCompat="@drawable/character_blue_man_technician"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="31dp"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageButton
        android:id="@+id/thought_bubble"
        android:layout_width="93dp"
        android:layout_height="97dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/tw__transparent"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/technicianImg"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintLeft_toLeftOf="@+id/technicianImg"
        app:layout_constraintRight_toRightOf="@+id/technicianImg"
        app:srcCompat="@drawable/thought_bubble"/>

    <TextView
        android:id="@+id/technician_a8_txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="64dp"
        android:layout_marginStart="64dp"
        android:background="@color/colorPrimaryDark"
        android:padding="6dp"
        android:text="@string/technician_a8_txt2"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/imageButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="96dp"
        app:layout_constraintRight_toLeftOf="@+id/thought_bubble"
        android:layout_marginRight="8dp"/>

    <TextView
        android:id="@+id/technician_a8_txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:background="@color/colorPrimaryDark"
        android:padding="6dp"
        android:text="@string/technician_a8_txt1"
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/thought_bubble"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.532"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/technician_a8_txt2"/>

    <TextView
        android:id="@+id/technician_a8_txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="96dp"
        android:layout_marginStart="96dp"
        android:background="@color/colorPrimaryDark"
        android:padding="6dp"
        android:text="@string/technician_a8_txt3"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/technician_a8_txt2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/thought_bubble"
        android:layout_marginRight="8dp"/>

    <TextView
        android:id="@+id/technician_a8_txt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="128dp"
        android:layout_marginStart="128dp"
        android:background="@color/colorPrimaryDark"
        android:padding="6dp"
        android:text="@string/technician_a8_txt4"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/technician_a8_txt3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/thought_bubble"
        android:layout_marginRight="8dp"/>
</android.support.constraint.ConstraintLayout>