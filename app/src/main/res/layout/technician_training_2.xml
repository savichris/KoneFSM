<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ImageButton
        android:id="@+id/nextBtn"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="fitCenter"
        android:text="Next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/equip_c_arrow_right"/>

    <ImageView
        android:id="@+id/technicianImg"
        android:layout_width="89dp"
        android:layout_height="152dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:transitionName="technicianCharacter"
        app:srcCompat="@drawable/character_blue_man_technician"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/technician_goal1_img"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_marginRight="265dp"
        android:layout_marginTop="261dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/equip_turnstiles_isometric"
        />

    <TextView
        android:id="@+id/technician_goal1_txt"
        android:layout_width="243dp"
        android:layout_height="218dp"
        android:background="@color/colorPrimaryDark"
        android:padding="4dp"
        android:text="@string/technician_a3_text"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_marginRight="29dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="80dp"
        app:layout_constraintLeft_toRightOf="@+id/technician_goal1_img"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.187"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/technicianImg"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="235dp"
        android:layout_height="68dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/technician_a3_title"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>